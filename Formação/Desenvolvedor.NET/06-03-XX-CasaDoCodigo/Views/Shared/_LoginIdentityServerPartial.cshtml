@{
    var claims = User.Claims.ToList();
    string nomeUsuario = User.FindFirst("name")?.Value;
}

@if (!string.IsNullOrWhiteSpace(nomeUsuario))
{
    <form asp-area="" asp-controller="Conta" asp-action="Logout">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a>Olá, @nomeUsuario !</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Sair</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Conta" asp-action="Login">Entrar</a></li>
    </ul>
}