@addTagHelper *, 06-04-XX-CasaDoCodigo
@using _06_04_XX_CasaDoCodigo.Areas.Catalogo.Models.ViewModels
@model CarrosselViewModel
@{
    var categoria = Model.Categoria;
}
<h3>@categoria.Nome</h3>
<div id="my-carousel-@categoria.Id" class="carousel slide" data-ride="carousel">
    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
        @for (int pagina = 0; pagina < Model.NumPaginas; pagina++)
        {
            <vc:carrossel-pagina indice-pagina="@pagina" produtos-na-categoria="@Model.Produtos" tamanho-pagina="@Model.TamanhoPagina" />
        }
    </div>
    @* o parametro model passa o modelo da view pai para a PartialView*@
    <!-- Controls -->
    <partial name="_NavegacaoCarrossel" model="@categoria" />
</div>
