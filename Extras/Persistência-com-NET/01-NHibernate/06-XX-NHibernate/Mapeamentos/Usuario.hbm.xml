<?xml version="1.0" encoding="utf-8" ?>

<!--Realizando o mapeamento da classe, devo declarar o assembly (projeto) que possui a classe e seu namespace -->
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="06-XX-NHibernate" namespace="_06_XX_NHibernate.Entidades">
  <!--mapeando a classe-->
  <class name="Usuario">
    <!--mapeando o id e falando que é autoincremental-->
    <id name="Id">
      <generator class="identity"/>
    </id>
    <!--mapeando as propriedades-->
    <property name="Nome"/>
  </class>
</hibernate-mapping>
