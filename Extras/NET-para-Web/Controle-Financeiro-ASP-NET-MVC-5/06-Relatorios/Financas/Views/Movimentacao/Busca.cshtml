@model Financas.Models.BuscaMovimentacoesModel

@using (Html.BeginForm("Busca", "Movimentacao", FormMethod.Get))
{
    <div class="row">
        <fieldset>
            <legend>Data da Movimentação</legend>
            <div class="col-sm-6">
                @Html.LabelFor(m => m.DataMinima, "Mínima")
                @Html.TextBoxFor(m => m.DataMinima, new { @class = "form-control" })
            </div>
            <div class="col-sm-6">
                @Html.LabelFor(m => m.DataMaxima, "Máxima")
                @Html.TextBoxFor(m => m.DataMaxima, new { @class = "form-control" })
            </div>
        </fieldset>
        <fieldset>
            <legend>Valor da Movimentação</legend>
            <div class="col-sm-6">
                @Html.LabelFor(m => m.ValorMinimo, "Mínimo")
                @Html.TextBoxFor(m => m.ValorMinimo, new { @class = "form-control" })
            </div>
            <div class="col-sm-6">
                @Html.LabelFor(m => m.ValorMaximo, "Máximo")
                @Html.TextBoxFor(m => m.ValorMaximo, new { @class = "form-control" })
            </div>
        </fieldset>
        <fieldset>
            <legend>Usuário e Tipo</legend>
            <div class="col-sm-6">
                @Html.LabelFor(m => m.Tipo, "Tipo")
                @Html.EnumDropDownListFor(m => m.Tipo, new { @class = "form-control" })
            </div>
            <div class="col-sm-6">
                @Html.LabelFor(m => m.UsuarioId, "Usuário")
                @Html.DropDownListFor(m => m.UsuarioId, new SelectList(Model.Usuarios, "Id", "Nome"), "Escolha um usuário", new { @class = "form-control" })
            </div>
        </fieldset>

        <input type="submit" value="Buscar" />
    </div>
}

<table class="table table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Data</th>
            <th>Valor</th>
            <th>Tipo</th>
            <th>Usuário</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model.Movimentacaos)
        {
            <tr>
                <td>@m.Id</td>
                <td>@m.Data</td>
                <td>@m.Valor</td>
                <td>@m.Tipo</td>
                <td>@m.Usuario.Nome</td>
            </tr>
        }
    </tbody>
</table>